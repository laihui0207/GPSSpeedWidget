<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lyric_floating_border"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

            <com.huivip.gpsspeedwidget.view.LrcView
                android:id="@+id/lrc_floatting_view"
                android:layout_width="wrap_content" android:visibility="gone"
                android:layout_height="wrap_content"
                app:lrcMode="KARAOKE" />
            <com.huivip.gpsspeedwidget.lyrics.widget.FloatLyricsView
                android:id="@+id/floatlyricsview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right" android:id="@+id/lyric_control"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView_lyrc_floating_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/deleted" />
            <ImageView
                android:id="@+id/imageView_lyrc_floating_fixed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/fixed" />
            <ImageView
                android:id="@+id/imageView_lyrc_floating_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/widget_close" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>