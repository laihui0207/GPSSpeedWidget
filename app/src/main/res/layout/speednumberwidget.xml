<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_number_base"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/speed_border"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center"
        android:src="@drawable/gohome" />

    <ImageView
        android:id="@+id/image_roadLine"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="top|center" />

    <ImageView
        android:id="@+id/image_company"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:src="@drawable/gocompany" />

    <ImageView
        android:id="@+id/image_config"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/image_auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|left"
        android:src="@drawable/autonavi_icon" />

    <ImageView
        android:id="@+id/image_gas_station"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|left"
        android:src="@drawable/lyric" />

    <ImageView
        android:id="@+id/image_xunhang_switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_xunhang_disable" />

    <LinearLayout
        android:id="@+id/number_widget"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/limitLayout"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/speed_limit_border"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBarLimit"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/speed_limit_border"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circle_limit_number" />

            <TextView
                android:id="@+id/textView_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="20dp"
                android:text="0米"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ellipsize="none"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|center_horizontal"
                android:includeFontPadding="false"
                android:text="..."
                android:textColor="#fff"
                android:textSize="80dp" />

            <TextView
                android:id="@+id/textView_limit_label"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/number_limit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom|center"
                android:gravity="top|center_vertical|center_horizontal"
                android:text="限速"
                android:textColor="#ffffffff"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/speedlayout"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/speed_number_border"
                android:indeterminate="false"
                android:max="125"
                android:progress="0"
                android:progressDrawable="@drawable/circle_speed_number" />

            <TextView
                android:id="@+id/textView_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/number_speed"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="20dp"
                android:text="北"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ellipsize="none"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|center_horizontal"
                android:includeFontPadding="false"
                android:text="关"
                android:textColor="#fff"
                android:textSize="80dp" />

            <TextView
                android:id="@+id/textView_unit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:gravity="top|center_vertical|center_horizontal"
                android:text="km/h"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
