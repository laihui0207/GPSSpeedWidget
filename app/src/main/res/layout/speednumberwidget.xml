<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@drawable/speed_border" >
    <ImageView android:layout_width="70dp" android:layout_height="60dp"
               android:src="@drawable/gohome"  android:layout_gravity="top|center" android:id="@+id/image_home"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="60dp"
         android:layout_gravity="top|center" android:id="@+id/image_roadLine"/>
    <ImageView android:layout_width="70dp" android:layout_height="60dp"
               android:src="@drawable/gocompany"  android:layout_gravity="bottom|center"
               android:id="@+id/image_company"/>
    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:src="@mipmap/ic_launcher"  android:layout_gravity="top|right"
               android:id="@+id/image_config"/>
    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:src="@drawable/autonavi_icon" android:layout_gravity="top|left"
               android:id="@+id/image_auto"/>
    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:src="@drawable/lyric" android:layout_gravity="bottom|left"
               android:id="@+id/image_gas_station"/>
    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:src="@drawable/xunhang" android:layout_gravity="bottom|right"
               android:id="@+id/image_xunhang_switch"/>
    <LinearLayout android:id="@+id/number_widget"
                  android:orientation="horizontal"
                  android:layout_width="400dp"
                  android:gravity="top|center"
                  android:layout_height="wrap_content" android:weightSum="2">

        <FrameLayout
            android:id="@+id/limitLayout"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/speed_limit_border"
            android:gravity="center" >

            <ProgressBar
                android:id="@+id/progressBarLimit"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/speed_limit_border"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circle_limit_number" />
            <TextView
                android:id="@+id/textView_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center"
                android:text="0米"
                android:textColor="#fff"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/number_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ellipsize="none"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|center_horizontal"
                android:includeFontPadding="false"
                android:text="..."
                android:textColor="#fff"
                android:textSize="80dp" />
            <TextView
                android:id="@+id/textView_limit_label"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/number_limit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom|center"
                android:gravity="top|center_vertical|center_horizontal"
                android:text="限速"
                android:textColor="#ffffffff"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/speedlayout"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/speed_number_border"
                android:indeterminate="false"
                android:max="125"
                android:progress="0"
                android:progressDrawable="@drawable/circle_speed_number" />

            <TextView
                android:id="@+id/textView_direction"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/number_speed"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:text="北"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ellipsize="none"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|center_horizontal"
                android:includeFontPadding="false"
                android:text="关"
                android:textColor="#fff"
                android:textSize="80dp" />

            <TextView
                android:id="@+id/textView_unit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:gravity="top|center_vertical|center_horizontal"
                android:text="km/h"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
