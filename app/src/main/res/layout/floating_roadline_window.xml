<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:id="@+id/roadline_view">
    <LinearLayout
        android:layout_width="wrap_content" android:id="@+id/layout_roadLine"
        android:layout_height="wrap_content" android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_floating_roadLine"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView_roadLine_roadName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:text="无名道路"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/roadline_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView_roadLine_floating_fixed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fixed" />
        <ImageView
            android:id="@+id/imageView_roadLine_floating_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/widget_close" />
    </LinearLayout>
</FrameLayout>