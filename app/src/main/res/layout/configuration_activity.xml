<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
    <!-- <ScrollView
             android:id="@+id/scrollView"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/autoStart"
                    android:text="开机自动启动"
            />
            <CheckBox
                    android:text="自动打开移动热点"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_autoWifi"
            />
            <CheckBox
                    android:text="显示状态栏通知"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_notifiction"/>
            <CheckBox
                    android:text="安全提醒语音"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_playWarn"/>
            <CheckBox
                    android:text="桌面歌词"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_lyric" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:text="延时"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_delaytext"
                    android:gravity="center_vertical"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="2"
                    android:id="@+id/editText_delay_started" android:text="0"/>
            <TextView
                    android:text="秒依次启动第三方应用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:gravity="center_vertical"/>
            <CheckBox
                    android:text="启动后返回桌面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_gotoHome"/>
            <Button
                    android:text="启动其它应用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_selectApp"/>

            <TextView
                    android:text="已选择："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_selectApps"
                    android:gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <CheckBox
                    android:text="记录GPS轨迹"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recordGPS"/>

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_naviTrack"
                     android:text="猎鹰轨迹服务(高德官方)"/>
            <TextView
                    android:text="    GPS速度调整:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="5"
                    android:hint="0(-100,100)"
                    android:id="@+id/editText_speedadjust"
                    android:layout_above="@+id/linearLayout"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <CheckBox
                    android:text="上传GPS数据"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/uploadGPSData"
                    android:layout_below="@+id/recordGPS"
                    android:layout_alignLeft="@+id/recordGPS"
                    android:layout_alignStart="@+id/recordGPS" android:visibility="gone"/>
            <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:text=""
                    android:hint="记录轨迹服务器地址,不填为空使用默认服务器"
                    android:ems="5" android:visibility="gone"
                    android:id="@+id/editText_remoteURL" android:layout_weight="4"/>
            <CheckBox
                    android:text="定期清理数据(只保留一个月)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/radioGroup_flattingStyleSelect"
                    android:layout_toRightOf="@+id/checkBox_timeFloating"
                    android:layout_toEndOf="@+id/checkBox_timeFloating" android:id="@+id/checkBox_cleanData"
                    android:layout_weight="1" android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <CheckBox
                    android:text="开启智能巡航"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enableAutoNavi"/>
            <CheckBox
                    android:text="老司机模式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_navi_mode"/>

            <CheckBox
                    android:text="道路限速超速提醒(不建议开启)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_roadLimitNotify"/>
            <TextView
                    android:text="路况数据来自高德在线数据"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_showmessage" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <CheckBox
                    android:text="开启语音功能(默认百度语音)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enableAudio"
                    android:checked="false"/>
            <CheckBox
                    android:text="思必驰语音"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_xftts"/>
            <CheckBox
                    android:text="语音与音乐混合"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_mix"/>
            <TextView
                    android:text="   语音音量:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_audioVolume"
                    android:gravity="fill_vertical"
                    android:visibility="gone"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="6"
                    android:hint="设置语音音量"
                    android:id="@+id/editText_audioVolume"
                    android:visibility="gone"/>

            <CheckBox
                    android:text="高德内置语音(路况)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_natviAudio" android:visibility="gone"/>
            <CheckBox
                    android:text="高德启动自动静音"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_autoMuted"
                    android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <CheckBox android:layout_width="wrap_content" android:id="@+id/checkBox_cacheAudioFile"
                      android:text="缓存语音文件" android:layout_height="wrap_content"/>

            <SeekBar
                    android:layout_width="433dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar_audioVolume"
                    android:maxWidth="100dp"
                    android:max="100" android:progress="50" android:layout_gravity="center_vertical"/>
            <Button
                    android:text="测试语音音量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_testAudio"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <CheckBox
                    android:text="报时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_playtime"/>
            <CheckBox
                    android:text="报天气"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_playweather"/>
            <CheckBox
                    android:text="停车关闭悬浮窗"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_hideFloating"
            />
            <CheckBox
                    android:text="停车播报当前地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_showAddress"/>
            <CheckBox
                    android:text="显示时间窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_timeFloating"/>

        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox
                    android:text="自动靠边"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_Navi_autoSolt" android:layout_alignBaseline="@+id/checkBox_navfloatiing"
                    android:layout_alignBottom="@+id/checkBox_navfloatiing"
                    android:layout_toEndOf="@+id/checkBox_navfloatiing"
                    android:layout_toRightOf="@+id/checkBox_navfloatiing"/>

            <CheckBox
                    android:text="开启巡航悬浮窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enableFloatingWindow"
                    android:layout_below="@+id/enableOver"/>

            <Button
                    android:text="Select maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_select_app"
                    android:visibility="gone"/>

            <Button
                    android:text="1. 允许顶层显示功能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EnableFalting"
                    android:layout_weight="1" android:layout_alignBaseline="@+id/enableOver"
                    android:layout_alignBottom="@+id/enableOver" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            <Button
                    android:text="2. 允许程序交互功能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enableOver"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/EnableFalting"
                    android:layout_toEndOf="@+id/EnableFalting"/>
            <CheckBox
                    android:text="桌面也显示悬浮窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/enableFloatingWindow"
                    android:id="@+id/checkBox_showondescktop" android:layout_toEndOf="@+id/button_select_app"
                    android:layout_toRightOf="@+id/button_select_app"
                    android:visibility="gone"/>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/checkBox_showondescktop"
                    android:layout_toRightOf="@+id/button_select_app"
                    android:layout_toEndOf="@+id/button_select_app" android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/radioGroup_flatingSelect">
                <RadioButton
                        android:text="不在桌面显示"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/fradioButton_noHome"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="只在桌面显示"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_onlyHome"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="只在导航时显示"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_autonavi"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="一直显示"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_all"
                        android:layout_weight="1" android:checked="true"/>
            </RadioGroup>
            <CheckBox
                    android:text="自动靠边"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_above="@+id/radioGroup_flatingSelect"
                    android:layout_toEndOf="@+id/enableFloatingWindow"
                    android:layout_toRightOf="@+id/enableFloatingWindow"
                    android:id="@+id/checkBox_autoSolt"/>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/checkBox_showLimit"
                    android:layout_toEndOf="@+id/checkBox_showLimit" android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/radioGroup_flattingStyleSelect"
                    android:layout_below="@+id/checkBox_speed_fixed_position">
                <RadioButton
                        android:text="默认样式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_style_default"
                        android:layout_weight="1" android:checked="true"/>
                <RadioButton
                        android:text="高德样式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_style_autonavi"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="仪表样式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_style_meter"
                        android:layout_weight="1"/>
            </RadioGroup>

            <CheckBox
                    android:text="显示限速窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_showLimit" android:layout_below="@+id/checkBox_autoSolt"
                    android:layout_toRightOf="@+id/radioGroup_flatingSelect" android:layout_marginLeft="14dp"
                    android:layout_toEndOf="@+id/radioGroup_flatingSelect" android:layout_marginStart="14dp"/>
            <CheckBox
                    android:text="显示速度窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/checkBox_showLimit"
                    android:layout_alignStart="@+id/checkBox_showLimit"
                    android:layout_alignLeft="@+id/checkBox_showLimit"
                    android:id="@+id/checkBox_showSpeed"/>
            <!-- <EditText
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:inputType="number"
                     android:ems="2"
                     android:id="@+id/editText_audioVolume"
                     android:layout_alignBottom="@+id/textView_audio"
                     android:layout_toEndOf="@+id/textView_audio"/>-->
            <CheckBox
                    android:text="横排显示"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_h_direction"
                    android:layout_below="@+id/checkBox_showSpeed"
                    android:layout_alignLeft="@+id/checkBox_showSpeed"
                    android:layout_alignStart="@+id/checkBox_showSpeed"/>


            <CheckBox
                    android:text="导航后台导航悬浮窗口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_navfloatiing" android:layout_below="@+id/radioGroup_flatingSelect"
                    android:layout_toRightOf="@+id/button_select_app"
                    android:layout_toEndOf="@+id/button_select_app"/>


            <Button
                    android:text="反馈问题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_feedback" android:visibility="gone"
                    android:layout_alignBaseline="@+id/button_update" android:layout_alignBottom="@+id/button_update"
                    android:layout_toRightOf="@+id/button_update"
                    android:layout_toEndOf="@+id/button_update"/>

            <CheckBox
                    android:text="高德样式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_floating_style"
                    android:layout_alignBaseline="@+id/checkBox_h_direction"
                    android:layout_alignBottom="@+id/checkBox_h_direction"
                    android:visibility="gone"/>


            <CheckBox
                    android:text="固定位置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_speed_fixed_position"
                    android:layout_alignBaseline="@+id/checkBox_autoSolt"
                    android:layout_alignBottom="@+id/checkBox_autoSolt"
                    android:layout_toRightOf="@+id/checkBox_autoSolt"
                    android:layout_toEndOf="@+id/checkBox_autoSolt"/>
            <CheckBox
                    android:text="固定位置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_navi_fixed_position"
                    android:layout_alignBaseline="@+id/checkBox_Navi_autoSolt"
                    android:layout_alignBottom="@+id/checkBox_Navi_autoSolt"
                    android:layout_toRightOf="@+id/checkBox_Navi_autoSolt"
                    android:layout_toEndOf="@+id/checkBox_Navi_autoSolt"/>

            <TextView
                    android:text="长按悬浮窗2秒以上取消位置固定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_above="@+id/radioGroup_flattingStyleSelect"
                    android:layout_toRightOf="@+id/checkBox_speed_fixed_position"
                    android:layout_toEndOf="@+id/checkBox_speed_fixed_position" android:id="@+id/textView6"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignTop="@+id/checkBox_speed_fixed_position"/>
            <CheckBox
                    android:text="小号样式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_smallType"
                    android:layout_below="@+id/enableFloatingWindow"
                    android:layout_toEndOf="@+id/radioGroup_flattingStyleSelect"/>
            <CheckBox
                    android:text="导航开始20秒后返回桌面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_returnHome_afterAutoStart"
                    android:layout_toEndOf="@+id/checkBox_navi_fixed_position"
                    android:layout_alignTop="@+id/checkBox_Navi_autoSolt"/>
            <CheckBox
                    android:text="高德地图界面关闭悬浮窗"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_hideFloating_onAutoNavi" android:layout_above="@+id/enableFloatingWindow"
                    android:layout_toEndOf="@+id/enableOver"/>
            <TextView
                    android:text="点击速度弹出悬浮地图"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp" android:textColor="@color/red500"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/checkBox_showLimit"
                    android:layout_alignEnd="@+id/checkBox_returnHome_afterAutoStart"/>


        </RelativeLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_btn_ok"
                    android:layout_weight="1"
                    android:elevation="21dp"
                    />
            <Button
                    android:text="检查更新"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_update" />
            <Button
                    android:text="提交异常日志"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_uploadLog" />
            <Button
                    android:text="打赏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_pay" />
        </LinearLayout>
        <!-- </ScrollView>-->
        <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:text="作者QQ： 478722925, 交流群：613841801"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_appVersion"
                    android:layout_marginLeft="52dp"
                    android:layout_marginStart="52dp"/>
            <TextView
                    android:text="TextView" android:layout_marginLeft="52dp"
                    android:layout_marginStart="52dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_uid"/>
        </LinearLayout>
    </LinearLayout>
    <!-- <FrameLayout
             android:id="@+id/fl_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

     </FrameLayout>-->
</ScrollView>
