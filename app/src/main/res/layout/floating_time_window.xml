<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="330dp"
              android:layout_height="100dp"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:background="@drawable/navi_floating_border"
            android:layout_height="match_parent" android:id="@+id/layout_Time">
        <TextView
                android:text="时间窗口"
                android:layout_width="wrap_content" android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content" android:id="@+id/textView_time" android:layout_weight="1"
                android:textSize="40sp"/>
    </LinearLayout>
</LinearLayout>