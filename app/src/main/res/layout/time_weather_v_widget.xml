<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_time_base_v"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/speed_border"
    android:orientation="vertical">
    <TextView android:gravity="center" android:textColor="@color/white"
        android:layout_width="match_parent" android:text="时间" android:textSize="20sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <AnalogClock
        android:id="@+id/v_analog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

    <ImageView
        android:id="@+id/image_time_v"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:contentDescription="Time text"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/image_weather_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:contentDescription="Time text"
        android:src="@drawable/sunny"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_city_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:drawableStart="@drawable/ic_locat"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText,NestedWeights,RtlSymmetry" />

        <TextView
            android:id="@+id/text_temperature_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-/-\u2103"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_day_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="09-09"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text_week_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="星期二"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_chinaDate_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="八月初八"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText,NestedWeights" />

        <TextView
            android:id="@+id/text_altitude_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingStart="20dp"
            android:drawableStart="@drawable/ic_shan"
            android:text="100米"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </LinearLayout>

</LinearLayout>
